<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#46A850</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:colorAccent">@color/red</item>

    </style>
    <style name="ButtonLogin" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/yellow</item>
    </style>

    <style name="ButtonSignUp" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/yellow</item>
    </style>
    <style name="ButtonRegister" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/black</item>
        <item name="colorButtonNormal">@color/yellow</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>
    <style name="CardView" parent="@style/Base.CardView" />
    <style name="CardView.Dark" parent="@style/CardView">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>
    <style name="CardView.Light" parent="@style/CardView">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>
    <style name="HeadTitle">
        <item name="android:textSize">50.0dip</item>
        <item name="android:typeface">sans</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="RegistrationPage">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">#CE0C0C</item>
    </style>
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="roundimage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>

</resources>