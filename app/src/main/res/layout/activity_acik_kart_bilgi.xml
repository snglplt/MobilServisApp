            <FrameLayout
                android:id="@+id/fragment_mekanik"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:defaultNavHost="true" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>