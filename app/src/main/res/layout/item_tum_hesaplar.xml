<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TableRow>


            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="@string/cariadi"
                android:textSize="10dp"
                android:textStyle="bold"
                ></TextView>
            <TextView></TextView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="@string/tahsilat"
                android:textSize="10dp"></TextView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="@string/odeme"
                android:textSize="10dp"></TextView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="@string/bakiye"
                android:textSize="10dp"


                ></TextView>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/txt_cari"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="@string/cariadi"
                android:textSize="10dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:visibility="gone"
                android:id="@+id/txt_cari_ad_tum">

            </TextView>

            <TextView
                android:id="@+id/txt_alacak"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="@color/red"
                android:textSize="10dp"
                ></TextView>

            <TextView
                android:id="@+id/txttahsilat"
                android:layout_gravity="right"
                android:gravity="right"></TextView>



            <TextView
                android:id="@+id/txtbakiye"
                android:layout_gravity="right"
                android:gravity="right"></TextView>


        </TableRow>

    </TableLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />

</LinearLayout>