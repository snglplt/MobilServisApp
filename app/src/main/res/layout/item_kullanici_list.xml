<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="horizontal"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_r"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/profil"
                android:layout_gravity="center"
                app:shapeAppearance="@style/roundimage"></com.google.android.material.imageview.ShapeableImageView>


            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ad">
                    </TextView>
                    <TextView
                        android:id="@+id/txtad_soyad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tel"></TextView>
                    <TextView
                        android:id="@+id/txt_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        ></TextView>
                    <ImageView
                        android:id="@+id/btn_ara"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_baseline_phone_24"
                        ></ImageView>

                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bransi">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtbrans"
                        ></TextView>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/kadi"></TextView>
                    <TextView
                        android:id="@+id/txt_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/txtid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        ></TextView>
                </TableRow>
                <TableRow>



                </TableRow>
                <TextView
                    android:id="@+id/image_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                </TextView>


            </TableLayout>




            <!--   <Button
                   android:id="@+id/btn_guncelle"
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:background="@drawable/guncelle"
                   android:text="güncelle" />

               <Button
                   android:id="@+id/btn_sil_evrak"
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:background="@drawable/sil"
                   android:text="SİL" />-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >



        </LinearLayout></LinearLayout>

</androidx.cardview.widget.CardView>








