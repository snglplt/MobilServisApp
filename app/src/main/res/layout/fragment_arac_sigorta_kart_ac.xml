<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/design_default_color_primary_dark"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAracBilgi_kart_ac"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/aracbilgi"
                android:textColor="#fff"
                android:textSize="8dp">

            </Button>

            <Button
                android:id="@+id/btnAracSahibi_kart_ac_"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sahibi"
                android:textColor="#fff"
                android:textSize="8dp" />

            <Button
                android:id="@+id/btn_kabul_asamasi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sigorta"
                android:textColor="#fff"
                android:textSize="8dp" />
            <Button
                android:id="@+id/btn_istek_sikayet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/istek_sikayet"
                android:textColor="#fff"
                android:textSize="8dp" />
            <ImageView
                android:id="@+id/btn_cikis"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/geri"
                android:visibility="gone"></ImageView>


        </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <TableRow
            android:background="#dddddd"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/policeturu" />

            <Spinner
                android:id="@+id/spinner_police_turu_kart_ac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>


        </TableRow>
        <TableRow
            android:background="#F0F7F7" android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/policeno" />
            <EditText
                android:id="@+id/etpoliceNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:singleLine="true"
                android:inputType="textCapCharacters"/>

        </TableRow>
        <TableRow
            android:background="#ddd" android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/policebitistarihi" />
            <EditText
                android:id="@+id/etpolicebitistarihi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:singleLine="true"/>

        </TableRow>


        <TableRow
            android:background="#F0F7F7"
            android:padding="5dp"
            android:id="@+id/tutanak_tipi">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutanaktipi" />

            <Spinner
                android:id="@+id/spinner_tutanak_profili_kart_ac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </TableRow>
        <TableRow
            android:id="@+id/sigorta_tipi"
            android:background="#ddd" android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sigortalitipi" />

            <Spinner
                android:id="@+id/spinner_sigorta_profili_kart_ac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </TableRow>
        <TableRow android:background="#F0F7F7" android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sigortasirketi" />

            <EditText
                android:id="@+id/etsigortasirketi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:singleLine="true"/>

        </TableRow>

        <TableRow
            android:background="#dddddd"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kazatarihi" />

            <EditText
                android:id="@+id/etkazatarihi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:inputType="date"
                android:singleLine="true"/>

        </TableRow>
        <TableRow
            android:background="#F0F7F7"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ihbartarihi" />

            <EditText
                android:id="@+id/etihbartarihi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:inputType="date"
                android:singleLine="true"/>

        </TableRow>



        <TableRow android:background="#ddd" android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dosyano" />

            <EditText
                android:id="@+id/etdosyano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:singleLine="true"
                android:inputType="textCapCharacters"/>

        </TableRow>
        <TableRow android:background="#F0F7F7" android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eksper" />

            <EditText
                android:id="@+id/etsigortaeksperi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:singleLine="true"/>

        </TableRow>
        <TableRow android:background="#ddd" android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eksperadres" />

            <EditText
                android:id="@+id/eteksperadres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:singleLine="true"/>

        </TableRow>

        <TableRow
            android:background="#F0F7F7"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ekspertel" />

            <EditText
                android:id="@+id/etekspertel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:inputType="number"
                android:singleLine="true"/>

        </TableRow>



        <TableRow
            android:background="#ddd"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ekspermail" />

            <EditText
                android:id="@+id/etekspermail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:singleLine="true"/>

        </TableRow>

        <TableRow
            android:background="#dddddd"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_arac_bilgi_ilerle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark"
                android:text="@string/ilerle"
                android:textColor="@color/white"></Button>
        </TableRow>


    </TableLayout>
    </LinearLayout>
</ScrollView>