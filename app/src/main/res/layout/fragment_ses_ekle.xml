<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SesEkleFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ses_kayit_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/mikrofon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_stop_recording"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_500"
            android:textColor="#fff"
            android:text="@string/durdur">

        </Button>
        <Button
            android:id="@+id/button_play_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/purple_500"
            android:textColor="#fff"
            android:text="Oynat"
            android:visibility="gone">

        </Button>
    </LinearLayout>

    <Button
        android:id="@+id/button_pause_recording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Oynat"
        android:visibility="gone">

    </Button>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_rc_ses"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>