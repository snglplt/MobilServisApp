<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MailKampanyaActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/toolbar_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_chevron_left_white_24px"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            app:tint="@color/gray" />

        <ImageView
            android:id="@+id/forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_chevron_right_white_24px"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            app:tint="@color/gray" />

        <ImageView
            android:id="@+id/billing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:src="@drawable/ic_not_interested_white_24px"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            app:tint="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/refresh"
                android:layout_gravity="end"
                android:src="@drawable/ic_refresh_white_24px"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                app:tint="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_geri"
        android:layout_gravity="top|left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/geri"
        android:visibility="gone"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mailgonder"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="#AF0505">

    </TextView>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ddd"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kime"></TextView>

        <CheckBox
            android:id="@+id/check_tumu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tumu"></CheckBox>

        <CheckBox
            android:id="@+id/check_secilen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/secilen"></CheckBox>

        <CheckBox
            android:id="@+id/check_marka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/marka">

        </CheckBox>

        <CheckBox
            android:id="@+id/check_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/model">

        </CheckBox>




    </LinearLayout>
    <TextView
        android:id="@+id/txt_kac_kisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"></TextView>
    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="@string/mesaj"
        />

    <Button
        android:id="@+id/btn_mesaj_gonder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/acikkart"
        android:text="@string/gonder" />


</LinearLayout>