<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.KullaniciTanimlamaActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/toolbar_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_chevron_left_white_24px"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            app:tint="@color/gray" />

        <ImageView
            android:id="@+id/forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_chevron_right_white_24px"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            app:tint="@color/gray" />

        <ImageView
            android:id="@+id/billing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:src="@drawable/ic_not_interested_white_24px"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            app:tint="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/refresh"
                android:layout_gravity="end"
                android:src="@drawable/ic_refresh_white_24px"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                app:tint="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kullanicitanimlamalari"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/green"
        android:gravity="center"></TextView>
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="5dp"
        ></ImageView>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:background="#ddd"
            android:padding="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/tc">
            </TextView>
            <EditText
                android:id="@+id/txttc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLength="11"
                android:inputType="number"
                android:singleLine="true"
                ></EditText>
        </TableRow>
        <TableRow
            android:background="#fff"
            android:padding="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/ad">
            </TextView>
            <EditText
                android:id="@+id/txtkullaniciadi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                ></EditText>
        </TableRow>
        <TableRow
            android:background="#ddd"
            android:padding="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/soyad">
            </TextView>
            <EditText
                android:id="@+id/txtkullanicisoyad"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                ></EditText>
        </TableRow>
        <TableRow
            android:background="#fff"
            android:padding="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/brans">
            </TextView>
            <Spinner
                android:id="@+id/spinner_brans"
                android:layout_width="0dp"
                android:layout_weight="1"
                ></Spinner>
        </TableRow>
        <TableRow
            android:background="#ddd"
            android:padding="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/il">
            </TextView>
            <EditText
                android:id="@+id/txtil"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                ></EditText>
        </TableRow>
        <TableRow
            android:background="#fff"
            android:padding="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/ilce">
            </TextView>
            <EditText
                android:id="@+id/txtilce"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                ></EditText>
        </TableRow>
        <TableRow
            android:background="#fff"
            android:padding="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/adres">
            </TextView>
            <EditText
                android:id="@+id/txtadres"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                ></EditText>
        </TableRow>
        <TableRow
            android:background="#ddd"
            android:padding="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/tel"
                >
            </TextView>
            <EditText
                android:id="@+id/txttel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="number"
                android:singleLine="true"
                ></EditText>
        </TableRow>

        <TableRow
            android:background="#fff"
            android:padding="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/kullaniciadi">
            </TextView>
            <EditText
                android:id="@+id/txtkullanici"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                ></EditText>
        </TableRow>
        <TableRow
            android:background="#ddd"
            android:padding="5dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/sifre">
            </TextView>
            <EditText
                android:id="@+id/txtparola"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                ></EditText>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_satin_al"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:text="@string/satinal"></Button>

</LinearLayout></ScrollView>